<h2 class="page-header">Update Profile</h2>

<!-- checked for the errors on users.js file in if statement. So now alert the user about the error by msg -->
{{#if errors}}
	{{#each errors}}
	<div class= "alert alert-danger">{{msg}}</div>
	{{/each}}
{{/if}}

<form method="put" action="/users/edit">
	<div class="form-group">
		<label>Name</label>
		<input type="text" class="form-control" placeholder="Name" name="name">
	</div>

	<div class="form-group">
		<label>Username</label>
		<input type="text" class="form-control" placeholder="Username" name="username">
	</div>

	<div class="form-group">
		<label>Email</label>
		<input type="text" class="form-control" placeholder="Email" name="email">
	</div>

	<div class="form-group">
		<label>Password</label>
		<input type="password" class="form-control" placeholder="Password" name="password">
	</div>

	<button type="submit" class="btn btn-primary">Save</button>
	<button type="close" class="btn btn-default">Close</button>

	<br>
	<br>
	<button type="delete" class="btn btn-danger">Delete Account</button>
</form>